<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Global Theme Styles -->
    <eat-comment />

    <style name="WindowTitleBackground">
        <item name="android:background">@drawable/title_bar</item>
    </style>

    <style name="WindowTitle" parent="android:style/WindowTitle">
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="Widget" parent="android:style/Widget">
    </style>

    <style name="Widget.Button" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:paddingTop">7px</item>
        <item name="android:paddingBottom">7px</item>
    </style>

    <style name="Widget.Button.Small">
        <item name="android:background">@drawable/btn_default_small</item>
    </style>

    <style name="Widget.Button.Inset">
        <item name="android:background">@drawable/button_inset</item>
    </style>

    <style name="Widget.Button.CompoundButton" parent="android:style/Widget.CompoundButton">
    </style>

    <style name="Widget.Button.CompoundButton.CheckBox" parent="android:style/Widget.CompoundButton.CheckBox">
        <item name="android:background">@drawable/btn_check_label_background</item>
        <item name="android:button">@drawable/btn_check</item>
    </style>

    <style name="Widget.Button.CompoundButton.RadioButton">
        <item name="android:background">@drawable/btn_radio_label_background</item>
        <item name="android:button">@drawable/btn_radio</item>
    </style>

    <style name="Widget.Button.Toggle" parent="android:style/Widget.Button.Toggle">
        <item name="android:background">@drawable/btn_toggle_bg</item>
    </style>

    <style name="Widget.Button.CompoundButton.Star">
        <item name="android:background">@drawable/btn_star_label_background</item>
        <item name="android:button">@drawable/btn_star</item>
    </style>

    <style name="Widget.RatingBar" parent="android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_full</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_full</item>
    </style>

    <style name="Widget.RatingBar.Indicator" parent="android:style/Widget.RatingBar.Indicator">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
    </style>

    <style name="Widget.RatingBar.Small" parent="android:style/Widget.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/ratingbar_small</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_small</item>
    </style>

    <style name="Widget.TextView" parent="android:style/Widget.TextView">
        <item name="android:textColorHighlight">@color/color_primary_focus</item>
    </style>

    <style name="Widget.TextView.ListSeparator" parent="android:style/Widget.TextView.ListSeparator">
        <item name="android:background">@drawable/dark_header</item>
    </style>

    <style name="Widget.EditText" parent="android:style/Widget.EditText">
        <item name="android:background">@drawable/edit_text</item>
    </style>

    <style name="Widget.ImageButton" parent="android:style/Widget.ImageButton">
        <item name="android:background">@drawable/btn_default</item>
    </style>

    <style name="Widget.SeekBar" parent="android:style/Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
        <item name="android:indeterminateDrawable">@drawable/progress_horizontal</item>
        <item name="android:thumb">@drawable/seek_thumb</item>
    </style>

    <style name="Widget.AutoCompleteTextView" parent="android:style/Widget.AutoCompleteTextView">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:dropDownSelector">@drawable/list_selector_background</item>
        <item name="android:popupBackground">@drawable/spinner_dropdown_background</item>
        <item name="android:textColorHighlight">@color/color_primary_focus</item>
    </style>

    <style name="Widget.Spinner" parent="android:style/Widget.Spinner">
        <item name="android:background">@drawable/btn_dropdown</item>
        <item name="android:listSelector">@drawable/list_selector_background</item>
    </style>

    <style name="Widget.DropDownItem.Spinner" parent="android:style/Widget.DropDownItem.Spinner">
        <item name="android:checkMark">@drawable/btn_radio</item>
    </style>

    <style name="Widget.PopupWindow">
        <item name="android:popupBackground">@drawable/editbox_dropdown_background_dark</item>
    </style>

    <style name="Widget.ListView" parent="android:style/Widget.ListView">
        <item name="android:listSelector">@drawable/list_selector_background</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="Widget.ListView.White" parent="android:style/Widget.ListView.White">
        <item name="android:listSelector">@drawable/list_selector_background</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="Widget.ListView.Menu" parent="android:style/Widget.ListView.Menu">
        <item name="android:listSelector">@drawable/menu_selector</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="Widget.ListView.DropDown" parent="android:style/Widget.ListView.DropDown">
    	<item name="android:divider">@drawable/divider_horizontal_bright_opaque</item>
    </style>

    <style name="Widget.ExpandableListView" parent="android:style/Widget.ExpandableListView">
        <item name="android:groupIndicator">@drawable/expander_group</item>
        <item name="android:childDivider">@drawable/divider_horizontal_dark_opaque</item>
    </style>

    <style name="Widget.ExpandableListView.White" parent="android:style/Widget.ExpandableListView.White">
        <item name="android:childDivider">@drawable/divider_horizontal_bright_opaque</item>
    </style>

    <style name="Widget.ListView.White.Dialog">
    </style>

    <style name="Widget.ExpandableListView" parent="android:style/Widget.ExpandableListView">
        <item name="android:listSelector">@drawable/list_selector_background</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>



    <style name="Widget.GridView" parent="android:style/Widget.GridView">
        <item name="android:listSelector">@drawable/grid_selector_background</item>
    </style>

    <style name="Widget.ProgressBar.Horizontal" parent="android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
    </style>

    <!--style name="Widget.TabIndicator" parent="android:style/Widget.TabIndicator">
        <item name="android:background">@drawable/tab_indicator</item>
    </style-->

    <style name="Widget.TabWidget" parent="android:style/Widget.TabWidget">
        <item name="android:background">@color/background_dark</item>
        <item name="android:tabStripLeft">@drawable/tab_bottom_left</item>
        <item name="android:tabStripRight">@drawable/tab_bottom_right</item>
    </style>

     <style name="Widget.WebTextView" parent="android:style/Widget.WebTextView">
        <item name="android:dropDownSelector">@drawable/list_selector_background</item>
        <item name="android:popupBackground">@drawable/spinner_dropdown_background</item>
    </style>

    <style name="Widget.QuickContactBadge" parent="android:style/Widget.QuickContactBadge">
        <item name="android:background">@drawable/quickcontact_badge</item>
    </style>

    <style name="Widget.QuickContactBadgeSmall" parent="android:style/Widget.QuickContactBadgeSmall">
        <item name="android:background">@drawable/quickcontact_badge_small</item>
    </style>

    <style name="Widget.QuickContactBadge.WindowSmall">
        <item name="android:quickContactWindowSize">modeSmall</item>
    </style>

    <style name="Widget.QuickContactBadge.WindowMedium">
        <item name="android:quickContactWindowSize">modeMedium</item>
    </style>

    <style name="Widget.QuickContactBadge.WindowLarge">
        <item name="android:quickContactWindowSize">modeLarge</item>
    </style>

    <style name="Widget.QuickContactBadgeSmall.WindowSmall">
        <item name="android:quickContactWindowSize">modeSmall</item>
    </style>

    <style name="Widget.QuickContactBadgeSmall.WindowMedium">
        <item name="android:quickContactWindowSize">modeMedium</item>
    </style>

    <style name="Widget.QuickContactBadgeSmall.WindowLarge">
        <item name="android:quickContactWindowSize">modeLarge</item>
    </style>

    <!-- Base style for animations.  This style specifies no animations. -->
    <style name="Animation" />

    <!-- Standard animations for a full-screen window or activity. -->
    <style name="Animation.Activity" parent="android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
        <item name="android:taskOpenEnterAnimation">@anim/grow_fade_in_center</item>
        <item name="android:taskOpenExitAnimation">@anim/shrink_fade_out_center</item>
        <item name="android:taskCloseEnterAnimation">@anim/grow_fade_in_center</item>
        <item name="android:taskCloseExitAnimation">@anim/shrink_fade_out_center</item>
        <item name="android:taskToFrontEnterAnimation">@anim/grow_fade_in_center</item>
        <item name="android:taskToFrontExitAnimation">@anim/shrink_fade_out_center</item>
        <item name="android:taskToBackEnterAnimation">@anim/grow_fade_in_center</item>
        <item name="android:taskToBackExitAnimation">@anim/shrink_fade_out_center</item>
    </style>

</resources>
