<resources>
    <style name="Androidian" parent="@android:style/Theme" >

        <item name="android:colorForeground">@color/bright_foreground_dark</item>
        <item name="android:colorForegroundInverse">@color/bright_foreground_dark_inverse</item>
        <item name="android:colorBackground">@color/background_dark</item>

        <!-- Window attributes -->
        <item name="android:windowBackground">@drawable/screen_background_dark</item>
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
        <item name="android:windowTitleStyle">@style/WindowTitle</item>
        <item name="android:windowTitleSize">35dip</item>
        <item name="android:windowAnimationStyle">@style/Animation.Activity</item>

        <item name="android:textCheckMark">@drawable/indicator_check_mark_dark</item>
        <item name="android:textCheckMarkInverse">@drawable/indicator_check_mark_light</item>


        <!-- Button styles -->
        <item name="android:buttonStyle">@style/Widget.Button</item>
        <item name="android:buttonStyleSmall">@style/Widget.Button.Small</item>
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:buttonStyleInset">@style/Widget.Button.Inset</item>

        <!-- List attributes -->
        <item name="android:listViewStyle">@style/Widget.ListView</item>
        <item name="android:listViewWhiteStyle">@style/Widget.ListView.White</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/btn_check</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/btn_radio</item>
        <item name="android:listDivider">@drawable/divider_horizontal_dark</item>
        <item name="android:dropDownListViewStyle">@style/Widget.ListView.DropDown</item>
        <item name="android:expandableListViewWhiteStyle">@style/Widget.ExpandableListView.White</item>
        <item name="android:expandableListViewStyle">@style/Widget.ExpandableListView</item>
        <item name="android:spinnerDropDownItemStyle">@style/Widget.DropDownItem.Spinner</item>

        <!-- Gallery attributes -->
        <item name="android:galleryItemBackground">@drawable/gallery_item_background</item>

        <!-- Widget styles -->
        <item name="android:autoCompleteTextViewStyle">@style/Widget.AutoCompleteTextView</item>
        <item name="android:checkboxStyle">@style/Widget.Button.CompoundButton.CheckBox</item>
        <item name="android:editTextStyle">@style/Widget.EditText</item>
        <item name="android:gridViewStyle">@style/Widget.GridView</item>
        <item name="android:imageButtonStyle">@style/Widget.ImageButton</item>
        <item name="android:popupWindowStyle">@style/Widget.PopupWindow</item>
        <item name="android:progressBarStyleHorizontal">@style/Widget.ProgressBar.Horizontal</item>
        <item name="android:seekBarStyle">@style/Widget.SeekBar</item>
        <item name="android:ratingBarStyle">@style/Widget.RatingBar</item>
        <item name="android:ratingBarStyleIndicator">@style/Widget.RatingBar.Indicator</item>
        <item name="android:ratingBarStyleSmall">@style/Widget.RatingBar.Small</item>
        <item name="android:radioButtonStyle">@style/Widget.Button.CompoundButton.RadioButton</item>
        <item name="android:spinnerStyle">@style/Widget.Spinner</item>
        <item name="android:starStyle">@style/Widget.Button.CompoundButton.Star</item>
        <item name="android:tabWidgetStyle">@style/Widget.TabWidget</item>
        <item name="android:textViewStyle">@style/Widget.TextView</item>
        <item name="android:webTextViewStyle">@style/Widget.WebTextView</item>
        <item name="android:quickContactBadgeStyleWindowSmall">@style/Widget.QuickContactBadge.WindowSmall</item>
        <item name="android:quickContactBadgeStyleWindowMedium">@style/Widget.QuickContactBadge.WindowMedium</item>
        <item name="android:quickContactBadgeStyleWindowLarge">@style/Widget.QuickContactBadge.WindowLarge</item>
        <item name="android:quickContactBadgeStyleSmallWindowSmall">@style/Widget.QuickContactBadgeSmall.WindowSmall</item>
        <item name="android:quickContactBadgeStyleSmallWindowMedium">@style/Widget.QuickContactBadgeSmall.WindowMedium</item>
        <item name="android:quickContactBadgeStyleSmallWindowLarge">@style/Widget.QuickContactBadgeSmall.WindowLarge</item>
    </style>

    <style name="Theme.Light" parent="@android:style/Theme.Light">
        <item name="android:windowBackground">@drawable/screen_background_light</item>
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
        <item name="android:windowTitleStyle">@style/WindowTitle</item>
        <item name="android:windowTitleSize">35dip</item>
        <item name="android:windowAnimationStyle">@style/Animation.Activity</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="android:colorForeground">@color/bright_foreground_light</item>
        <item name="android:colorForegroundInverse">@color/bright_foreground_light_inverse</item>

        <item name="android:popupWindowStyle">@style/Widget.PopupWindow</item>

        <item name="android:textCheckMark">@drawable/indicator_check_mark_light</item>
        <item name="android:textCheckMarkInverse">@drawable/indicator_check_mark_dark</item>

        <item name="android:expandableListViewStyle">@style/Widget.ExpandableListView.White</item>
        <item name="android:listViewStyle">@style/Widget.ListView.White</item>
        <item name="android:listDivider">@drawable/divider_horizontal_bright</item>
    </style>
</resources>
